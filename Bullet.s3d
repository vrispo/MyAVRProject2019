class bullet{
	var position;
	var direction;
	var speed;
	var mesh;
	var obj;
	init(pos,dir);
	update();
	draw();
};

function bullet::init(pos,dir){
	position = pos +[0,1,0];
	direction = dir;
	speed = 0.2;
	mesh = cvmNewMesh(VRP_BOX);
	mesh.scale(0.1);
	obj = CVmObj(mesh);
	obj.SetPosition(position);
}

function bullet::update(){
	position += direction * speed;
	obj.setposition(position);
}

function bullet::draw(){
	obj.draw();
}